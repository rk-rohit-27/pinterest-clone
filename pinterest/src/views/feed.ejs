<%- include('./partials/header') -%>

    <div class="w-full min-h-screen">
        <div class="cards mx-4 sm:ml-10 mt-10 flex flex-wrap gap-6">
            <% posts.forEach(function (elem) { %>
                <a href="/show/posts/<%= elem._id %>" class="card-link h-fit">
                    <div id="card" class="card w-48 p-1">
                        <div class="w-full h-30 bg-zinc-100 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>"
                                alt="<%= elem.title %>">
                        </div>
                        <h3 class="mt-2 text-sm font-semibold capitalize">
                            <%= elem.title %>
                        </h3>
                        <div class="flex gap-3 items-center mt-2">
                            <img class="w-6 h-6 object-cover rounded-full"
                                src="/images/uploads/<%= elem.user.profileImage %>" alt="<%= elem.user.username %>">
                            <h4 class="text-gray-500 capitalize">
                                <%= elem.user.username %>
                            </h4>
                        </div>
                    </div>
                </a>
                <% }) %>
        </div>
    </div>

    <%- include('./partials/footer') -%>