<%- include('./partials/header') -%>

<div class="w-full min-h-screen">
    <div class="cards ml-10 mt-10 flex flex-wrap gap-6">
        <% user.posts.forEach(function (elem) { %>
            <a href="/show/posts/<%= elem._id %>" class="card w-[200px] p-1">
                <div class="w-full h-40 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="<%= elem.title %>">
                </div>
                <h5 class="mt-2 text-sm font-medium capitalize leading-tight">
                    <%= elem.title %>
                </h5>
            </a>
        <% }) %>
    </div>
</div>

<%- include('./partials/footer') -%>
