<%- include('./partials/header') -%>

<div class="w-full min-h-screen flex justify-center px-5 py-5">
    <div class="w-full max-w-md h-auto rounded-md bg-zinc-100 p-5">
        <h1 class="mt-3 text-xl text-center font-semibold text-zinc-700">Create a New Post</h1>
        <hr class="opacity-10 mt-3">

        <form class="flex items-center flex-col" action="/createpost" method="post" enctype="multipart/form-data">
            <input class="w-full max-w-xs px-3 py-2 border-2 mt-2 rounded-md" type="text" name="title" placeholder="Title" required>
            <input class="w-full max-w-xs px-3 py-2 border-2 mt-2 rounded-md" type="text" name="description" placeholder="Description" required>
            <input class="w-full max-w-xs px-3 py-2 border-2 mt-2 rounded-md" type="file" name="postimage" accept="image/*" required>

            <select name="categories" class="w-full max-w-xs px-3 py-2 border-2 mt-2 rounded-md">
                <option value="">Select Category</option>
                <% categories.forEach(category => { %>
                    <option value="<%= category._id %>"><%= category.name %></option>
                <% }); %>
            </select>

            <input class="w-full max-w-xs px-3 py-2 border-2 mt-2 rounded-md" type="text" name="tags" placeholder="Tags (comma-separated)">

            <input class="w-full max-w-xs px-3 py-2 bg-red-600 text-white font-semibold border-2 mt-3 rounded-md cursor-pointer" type="submit" value="Create Post">
        </form>
    </div>
</div>

<%- include('./partials/footer') -%>
