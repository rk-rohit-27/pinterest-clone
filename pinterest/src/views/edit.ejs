<%- include('./partials/header') -%>

<div class="edit-profile w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-96 bg-white px-8 py-10 rounded-[30px] shadow-lg">
        <svg style="cursor:pointer" class="g_1 gUZ U9O kV m-auto mb-7" height="40" width="40" viewBox="0 0 24 24" aria-label="Pinterest" fill="#e60023" role="img">
            <path d="M0 12a12 12 0 0 0 7.73 11.22 12 12 0 0 1 .03-3.57l1.4-5.94S8.8 13 8.8 11.94c0-1.66.96-2.9 2.16-2.9 1.02 0 1.51.77 1.51 1.68 0 1.03-.65 2.56-.99 3.98-.28 1.19.6 2.16 1.77 2.16 2.12 0 3.76-2.24 3.76-5.47 0-2.86-2.06-4.86-5-4.86a5.17 5.17 0 0 0-5.39 5.18c0 1.03.4 2.13.9 2.73q.12.17.08.34l-.34 1.36q-.06.31-.4.16c-1.49-.7-2.42-2.88-2.42-4.63 0-3.77 2.74-7.23 7.9-7.23 4.14 0 7.36 2.95 7.36 6.9 0 4.12-2.6 7.43-6.2 7.43-1.21 0-2.35-.63-2.74-1.37l-.74 2.84a14 14 0 0 1-1.55 3.23A12 12 0 1 0 0 12"></path>
        </svg>
        <h2 class="text-2xl font-semibold mb-4 text-center text-zinc-700">Edit Profile</h2>

        <% if (error) { %>
            <p class="text-red-500 text-center"><%= error %></p>
        <% } %>

        <form action="/profile/update" method="POST">
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" required
                    class="mt-1 p-2 border border-gray-300 rounded-md w-full">
            </div>
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" required
                    class="mt-1 p-2 border border-gray-300 rounded-md w-full">
            </div>
            <button type="submit" class="w-full bg-red-600 text-white font-semibold py-2 rounded-md">Save Changes</button>
        </form>
        <div class="mt-4">
            <a href="/profile" class="text-red-600 underline">Cancel</a>
        </div>
    </div>
</div>

<%- include('./partials/footer') -%>
